#!/bin/bash
#----------------------------------------
source package_untar "bash"

./configure --prefix=/usr                   \
            --build=$(support/config.guess) \
            --host=$M2_ROOT_TGT                 \
            --without-bash-malloc
make
make DESTDIR=$M2_ROOT install
ln -sv bash $M2_ROOT/bin/sh

cd $M2_ROOT
rm -rf source/$SOURCE_DIR

