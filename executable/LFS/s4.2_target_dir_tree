#!/bin/bash
# 

mkdir -pv "$LFS"/{etc,var} "$LFS"/usr/{bin,lib,sbin,include}

for i in bin lib sbin; do
    ln -sv usr/$i "$LFS"/$i
done

case $(uname -m) in
    x86_64) mkdir -pv "$LFS"/lib64 ;;
esac

mkdir -pv "$LFS"/tools

# might need to add this if we need the tmp directory sooner
# install -dv -m 1777 /tmp 


