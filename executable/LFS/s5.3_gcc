#!/bin/bash

source package_untar "gcc"

tar -xf "$LFS"/package/mpfr-*.tar.*
tar -xf "$LFS"/package/gmp-*.tar.*
tar -xf "$LFS"/package/mpc-*.tar.*

mv -v mpfr-* mpfr
mv -v gmp-* gmp
mv -v mpc-* mpc

# It is uncool to break the source tree.  I would rather do this:
# but alas, it crashed and burned when I tried it
# ln -s ../gmp-6.2.1 gmp
# ln -s ../ mpfr-4.1.0 mpfr
# ln -s ../mpc-1.2.1 mpc

mv ../gmp* gmp
mv ../mpfr* mpfr
mv ../mpc* mpc

case $(uname -m) in
  x86_64)
    sed -e '/m64=/s/lib64/lib/' \
        -i.orig gcc/config/i386/t-linux64
 ;;
esac

mkdir -v build
cd build

../configure                  \
    --target=$LFS_TGT         \
    --prefix=$LFS/tools       \
    --with-glibc-version=2.35 \
    --with-sysroot=$LFS       \
    --with-newlib             \
    --without-headers         \
    --enable-initfini-array   \
    --disable-nls             \
    --disable-shared          \
    --disable-multilib        \
    --disable-decimal-float   \
    --disable-threads         \
    --disable-libatomic       \
    --disable-libgomp         \
    --disable-libquadmath     \
    --disable-libssp          \
    --disable-libvtv          \
    --disable-libstdcxx       \
    --enable-languages=c,c++

make
make install

cd ..
cat gcc/limitx.h gcc/glimits.h gcc/limity.h > \
  `dirname $($LFS_TGT-gcc -print-libgcc-file-name)`/install-tools/include/limits.h
#fyi
#  > dirname $($LFS_TGT-gcc -print-libgcc-file-name)
#  /mnt/lfs/tools/lib/gcc/x86_64-lfs-linux-gnu/11.2.0

cd $LFS
rm -rf source/$SOURCE_DIR

