#!/bin/bash
echo \#--------------------------------------------------------------------------------
echo \# $0

source package_untar "findutils"

./configure --prefix=/usr                   \
            --localstatedir=/var/lib/locate \
            --host=$LFS_TGT                 \
            --build=$(build-aux/config.guess)
make
make DESTDIR=$M2_ROOT install

cd $M2_ROOT
rm -rf source/$SOURCE_DIR
