#!/bin/bash
#seem to have lost my unpack and check the MD5sums script

if [[ ! -d "$LFS/patch" ]]; then
    mkdir "$LFS/patch"
fi
pushd "$LFS/patch"

wget https://www.linuxfromscratch.org/patches/lfs/11.1/binutils-2.38-lto_fix-1.patch
wget https://www.linuxfromscratch.org/patches/lfs/11.1/bzip2-1.0.8-install_docs-1.patch
wget https://www.linuxfromscratch.org/patches/lfs/11.1/coreutils-9.0-i18n-1.patch
wget https://www.linuxfromscratch.org/patches/lfs/11.1/coreutils-9.0-chmod_fix-1.patch
wget https://www.linuxfromscratch.org/patches/lfs/11.1/glibc-2.35-fhs-1.patch
wget https://www.linuxfromscratch.org/patches/lfs/11.1/kbd-2.4.0-backspace-1.patch
wget https://www.linuxfromscratch.org/patches/lfs/11.1/perl-5.34.0-upstream_fixes-1.patch
wget https://www.linuxfromscratch.org/patches/lfs/11.1/sysvinit-3.01-consolidated-1.patch

popd

