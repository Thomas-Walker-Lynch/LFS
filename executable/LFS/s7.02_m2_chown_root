#!/bin/bash
echo \#
echo \#
echo \#
echo \#--------------------------------------------------------------------------------
echo \# $0
echo \#
echo \#
echo \#

set -e
set -x

# -h will change the owner of a symbolic link instead just changing the owner of the target
sudo chown -hR root:root $M2_ROOT/{usr,lib,var,etc,bin,sbin,tools}
case $(uname -m) in
  x86_64) sudo chown -hR root:root $M2_ROOT/lib64 ;;
esac

set +x
