#!/bin/bash

if [[ "$LFS_ENV" != "m1_root" ]];then
  echo $(basename "$0") "only intended to be run in env_m1_root"
  exit 1
fi

# -h will change the owner of a symbolic link instead just changing the owner of the target
chown -hR root:root $LFS_M2_FILESYSTEM/{usr,lib,var,etc,bin,sbin,tools}
case $(uname -m) in
  x86_64) chown -hR root:root $LFS_M2_FILESYSTEM/lib64 ;;
esac

set +x
