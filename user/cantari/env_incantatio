#!/bin/bash
# would rather not have the rm -rf with sudo at the bottom.  Looks like a good
# way to delete the entire machine.
#set -x

incantatio=$1
script=${@:2}

if [[ -z "$incantatio" ]]; then
  echo $(basename "$0") "requires an incantatio as a first argument"
  exit 1
fi
if [[ -z "$script" ]]; then
  script=/bin/bash\ --init-file\ "$REPO_USER_DIR"/library/bashrc_lfs
fi

source incantatio_untar "$1"  

$script 

if [[ ! -z "$LFS_M2_FS"  && ! -z "$SOURCE_DIR" ]]; then
  sudo rm -rf "$LFS_M2_FS/source/$SOURCE_DIR"
fi

#set +x
