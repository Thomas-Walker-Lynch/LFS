s7.02_m2_chown_root:# $LUS_M2_FS_MP/source remains owned by lfs hmmm.
s7.02_m2_chown_root:chown -hR root:root $LUS_M2_FS_MP/{tmp,usr,lib,var,etc,bin,sbin,tools}
s7.02_m2_chown_root:  x86_64) chown -hR root:root $LUS_M2_FS_MP/lib64 ;;
s7.03_devices:mkdir -pv $LUS_M2_FS_MP/{dev,proc,sys,run}
s7.03_devices:mknod -m 600 $LUS_M2_FS_MP/dev/console c 5 1
s7.03_devices:mknod -m 666 $LUS_M2_FS_MP/dev/null c 1 3
s7.03_devices:if test -h $LUS_M2_FS_MP/dev/shm; then
s7.03_devices:   mkdir -pv $LUS_M2_FS_MP/$(readlink $LUS_M2_FS_MP/dev/shm)
