#!/bin/bash
# If the mount does not work, the build will end up on the local disk.

if [[ "$LUS_ENV" != "m1_root" ]];then
  echo $(basename "$0") "must be run in env_m1_root"
  exit 1
fi

good=false
mp="$LUS_M2_FS_MP"
m2_fs_mount-1 "$LUS_M2_FS_NODE" "$mp" "LUS_M2_FS"  && good=true
good && ! chmod ugo+rwxt "$mp" && echo "Did mount, but could not adjust permissions of $prefix_mp, $mp, afterward."

m2_fs_mount-1 "$LUS_M2_EFI_NODE" "$LUS_M2_EFI_MP" "LUS_M2_EFI"


