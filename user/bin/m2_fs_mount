#!/bin/bash
# If the mount does not work, the build will end up on the local disk.

if [[ "$LUS_ENV" != "m1_root" ]];then
  echo $(basename "$0") "must be run in env_m1_root"
  exit 1
fi

if ! test -z "$LUS_M2_FS_MP" && ! test -z "$LUS_M2_FS_NODE";then
  mkdir -p "$LUS_M2_FS_MP" &&
    mount -v $LUS_M2_FS_NODE "$LUS_M2_FS_MP" && 
    chmod ugo+rwxt  "$LUS_M2_FS_MP"
  if ! test -z "$LUS_M2_EFI_MP" && ! test -z "$LUS_M2_EFI_NODE";then
    mkdir -p "$LUS_M2_EFI_MP" &&
      mount -v -t vfat $LUS_M2_EFI_NODE "$LUS_M2_EFI_MP"
    exit 0
  fi
fi
exit 1


