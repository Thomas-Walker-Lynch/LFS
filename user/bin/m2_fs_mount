#!/bin/bash
# If the mount does not work, the build will end up on the local disk.

if [[ "$LFS_ENV" != "m1_root" ]];then
  echo $(basename "$0") "must be run in env_m1_root"
  exit 1
fi

mkdir -p "$LFS_M2_FS_MP"
mountpoint -q "$LFS_M2_FS_MP" || mount -v $LFS_M2_FS_NODE "$LFS_M2_FS_MP"
chmod ugo+rwxt  "$LFS_M2_FS_MP"

mkdir -p "$LFS_M2_EFI_MP"
mountpoint -q "$LFS_M2_EFI_MP" || mount -v -t vfat $LFS_M2_EFI_NODE "$LFS_M2_EFI_MP"


