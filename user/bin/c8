#!/bin/bash

# section 8.25.3 has us set root password, but I don't want to stop the script, so skipped it for now
# passwd root

if [[ "$LFS_ENV" != "m2" ]];then
  echo $(basename "$0") "must be run in env_m2"
  exit 1
fi

section="
man-pages
iana-etc
glibc
zlib
bzip2
xz
zstd
file
readline
m4
bc
flex
tcl
expect
dejagnu
binutils
gmp
mpfr
mpc
attr
acl
libcap
shadow
gcc
pkg-config
ncurses
sed
psmisc
gettext
bison
grep
bash
libtool
gdbm
gperf
expat
inetutils
less
perl
XML-Parser
intltool
autoconf
automake
openssl
kmod
"

IFS=$'\n'; for s in $section;do
  frame env_source $s s8_$s
done

frame env_source elfutils s8_libelf

section="
libffi
Python
ninja
meson
coreutils
check
diffutils
gawk
findutils
groff
"
IFS=$'\n'; for s in $section;do
  frame env_source $s s8_$s
done

if [[ "$LFS_BOOT_STYLE" == "legacy" ]]; then
  frame env_source grub s8_grub
fi

section="
gzip
iproute2
kbd
libpipeline
make
patch
tar
texinfo
vim
eudev
man-db
procps
util-linux
e2fsprogs
sysklogd
sysvinit
"

IFS=$'\n'; for s in $section;do
  frame env_source $s s8_$s
done

#strip debug info (if desired)
#cleanup
# s8.78_cleanup

