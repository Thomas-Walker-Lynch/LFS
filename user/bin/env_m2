#!/bin/bash
# set -x

script="$@"

if [[ "$LFS_ENV" != "m1_root" ]];then
  echo $(basename "$0") must be run in env_m1 env_m1_root
  exit 1
fi

if [[ !  -x "$LFS_M2_FS_MP"/usr/local/bin/Z ]]; then
  echo $(basename "$0") "no \$LFS_M2_FS_MP/usr/local/bin/Z, did you run 'book_m1_to_m2' ?"  > /dev/stderr
  exit 1
fi

if [[ ! -d "$LFS_M2_FS_MP"/mnt/Lustucru/user ]]; then
  echo $(basename "$0") "repo not found on mount, have you run m2_fs_bind?"
  exit 1
fi

if [[ -z "$script" ]]; then
  script=/bin/bash\ --init-file\ "$LFSM2_REPO_USER_DIR"/library/bashrc_lfs
fi

echo "chroot to"  "$LFS_M2_FS_MP"
chroot "$LFS_M2_FS_MP" /usr/bin/env --ignore-environment \
  HOSTNAME="$HOSTNAME"\
  TMP="/tmp"\
  TZ="$TZ"\
  TIME_STYLE="$TIME_STYLE"\
  LANG="$LANG"\
  LC_ALL="$LC_ALL"\
  TERM="$TERM" \
  TERMCAP="$TERMCAP" \
  EDITOR="$EDITOR" \
  PPS1="$PPS1"\
  PPS2="$PPS2"\
  REPO="$REPO"\
  LFSM2_REPO_DIR="$LFSM2_REPO_DIR"\
  PROJECT="$PROJECT:env_m2"\
  LFS_ENV="m2"\
  LFS_LOG="$LFS_LOG"\
  "$LFSM2_REPO_DIR/user/bin/env_m2-1" $script

#set +x
