#!/bin/bash

if [[ "$LFS_ENV" != "m2" ]];then
  echo $(basename "$0") "must be run in env_m2"
  exit 1
fi

if [[ "$LFS_LFS_BOOT_STYLE" == "UEFI" ]];then
  frame efi_build
  frame efi_fstab
  frame env_source linux efi_linux
else
  frame s10.2_fstab
  frame env_source linux s10_linux
fi

# could this not be done before s10_linux?
s10.3.2_module_load_order

# BLFS called it grub_setup,  LFS calls it grub_install
if [[ "$LFS_LFS_BOOT_STYLE" == "UEFI" ]];then
  efi_grub_setup
else
  s10.4_grub_install
fi


