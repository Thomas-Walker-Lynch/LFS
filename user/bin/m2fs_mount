#!/bin/bash
# If the mount does not work, the build will end up on the local disk.

if [[ "$LFS_ENV" != "m1_root" ]];then
  echo $(basename "$0") "must be run in env_m1_root"
  exit 1
fi

mkdir -p "$LFS_M2_FS"
mountpoint -q "$LFS_M2_FS" || mount -v $LFS_M2_DEVICE_FS "$LFS_M2_FS"
chmod ugo+rwxt  "$LFS_M2_FS"

mkdir -p "$LFS_M2_EFI"
mountpoint -q "$LFS_M2_EFI" || mount -v -t vfat $LFS_M2_DEVICE_EFI "$LFS_M2_EFI"


