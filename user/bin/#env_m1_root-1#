#!/bin/bash
# bash without -i resets PS1
# except for the log file variables this comes from section 4.4
#set -x

script="$@"

# config gives us the UUID of the partitions, but if we want to run a for
export LFS_M2D_EFI_NODE=$(blkid --uuid $LFS_M2_EFI_UUID)
export LFS_M2D_FS_NODE=$(blkid --uuid $LFS_M2_FS_UUID)

echo "LFS_M2_EFI_NODE: " $LFS_M2_EFI_NODE
echo "LFS_M2_FS_NODE:  " $LFS_M2_FS_NODE


# for our build scripts
source "$REPO_USER_DIR/build/config"
source "$REPO_USER_DIR/build/config_m1"

# according to the book	   
umask 022
export LC_ALL=POSIX
export LFS_TGT="$(uname -m)-lfs-linux-gnu"
export PATH="/usr/bin"
if [ ! -L /bin ]; then 
  PATH=/bin:"$PATH"
fi	 
PATH="$LFS_M2_FS/tools/bin":"$PATH"
PATH="$REPO_USER_DIR/bin":/user/local/bin:"$PATH"
export CONFIG_SITE="$LFS_M2_FS/usr/share/config.site"


$script
#set +x
