#!/bin/bash

mkdir -pv "$LFS_M2_FILESYSTEM"/{etc,var} "$LFS_M2_FILESYSTEM"/usr/{bin,lib,sbin,include}

for i in bin lib sbin; do
    ln -sv usr/$i "$LFS_M2_FILESYSTEM"/$i
done

case $(uname -m) in
    x86_64) mkdir -pv "$LFS_M2_FILESYSTEM"/lib64 ;;
esac

mkdir -pv "$LFS_M2_FILESYSTEM"/tools

# book calls for creating this directory later, but we need it earlier for our scripts
install -dv -m 1777 "$LFS_M2_FILESYSTEM"/tmp 


